{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Bash",
      "mcp__sequential-thinking__sequentialthinking"
    ],
    "deny": [
      "Bash(chmod 777 *)",
      "Bash(sudo *)",
      "Bash(git reset --hard*)",
      "Bash(git clean -f*)",
      "Bash(git clean -fd*)",
      "Bash(git push --force*)",
      "Bash(git push -f *)",
      "Bash(git branch -D *)",
      "Bash(rm *)",
      "Bash(rm -r*)",
      "Bash(unlink *)"
    ]
  },
  "enabledMcpjsonServers": [
    "context7",
    "sequential-thinking"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/skill-lint.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "kotlin-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
